@model MyWallet.Web.ViewModels.Context.ContextViewModel

@section breadcrumb {
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Contexts</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>
}

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Delete", "Context", FormMethod.Post, new { @class = "user" }))
        {
            @Html.HiddenFor(c => c.Id)
            @Html.HiddenFor(c => c.IsMainContext)
            <fieldset>
                <legend>Delete Context</legend>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(c => c.Name)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @readonly = true })
                </div>
                <button type="submit" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash"></i>
                    </span>
                    <span class="text">Delete</span>
                </button>
            </fieldset>
        }
    </div>
</div>


